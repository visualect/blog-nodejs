<!DOCTYPE html>
<html lang="en">

<%- include('./partials/head.ejs')%>

  <body>
    <%- include('./partials/nav.ejs')%>
      <form class="form" method="post" action="/add-post">
        <div class="form__main">
          <div class="form__wrapper form__title-wrapper">
            <label class="form__label form__title-label" for="title">Post Title</label>
            <input class="form__input form__title-input" type="text" name="title" id="title">
          </div>
          <div class="form__wrapper form__author-wrapper">
            <label class="form__label form__author-label" for="author">Author</label>
            <input class="form__input form__author-input" type="text" name="author" id="author">
          </div>
        </div>
        <div class="form__wrapper form__text-wrapper">
          <label class="form__label form__post-label" for="text">Post Text</label>
          <textarea class="form__input form__post-input" type="text" name="text" id="text"></textarea>
        </div>
        <div class="form__wrapper form__btn-wrapper">
          <button class="form__btn" type="submit">Submit</button>
        </div>
      </form>
  </body>

</html>